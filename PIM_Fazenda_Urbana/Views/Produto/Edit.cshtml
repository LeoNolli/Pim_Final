@model Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-sm border-1">
                <div class="card-header text-center text-white bg-dark-green">
                    <h3 class="mb-0">Editar Produto</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" asp-controller="Produto">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Campo oculto para o ID do produto -->
                        <input type="hidden" asp-for="ProdutoId" />

                        <!-- Campo Nome -->
                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="form-label fw-bold">Nome do Produto</label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Campo Descrição como textarea -->
                        <div class="form-group mb-3">
                            <label asp-for="Descricao" class="form-label fw-bold">Descrição</label>
                            <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Digite a descrição do produto"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <!-- Campo Preço -->
                        <div class="form-group mb-3">
                            <label asp-for="Preco" class="form-label fw-bold">Preço</label>
                            <input asp-for="Preco" class="form-control" type="text" placeholder="Digite o preço do produto" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>

                        <!-- Campo Quantidade em Estoque -->
                        <div class="form-group mb-3">
                            <label asp-for="QuantidadeEstoque" class="form-label fw-bold">Quantidade em Estoque</label>
                            <input asp-for="QuantidadeEstoque" class="form-control" placeholder="Digite a quantidade em estoque" />
                            <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                        </div>

                        <!-- Botões de Ação -->
                        <div class="d-grid gap-2 d-sm-flex justify-content-sm-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-dark w-100 me-1">
                                <i class="bi bi-arrow-left"></i> <span class="button-text">Voltar à Lista</span>
                            </a>
                            <button type="submit" class="btn text-white w-100 ms-1 bg-light-green">
                                <i class="bi bi-save"></i> <span class="button-text">Salvar</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Ajuste para suporte à cultura pt-BR -->
    <script>
        $.validator.methods.range = function (value, element, param) {
            var globalizedValue = value.replace(",", ".");
            return this.optional(element) || (parseFloat(globalizedValue) >= param[0] && parseFloat(globalizedValue) <= param[1]);
        };

        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)(?:,\d+)?$/.test(value);
        };
    </script>
}
