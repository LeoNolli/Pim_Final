<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PIM_Fazenda_Urbana</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Geral.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/table-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PIM_Fazenda_Urbana.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script defer src="~/js/mensagemErro.js"></script>

</head>

<body>

    @if (User.Identity.IsAuthenticated && !User.IsInRole("Cliente"))
    {
        @await Html.PartialAsync("_HeaderUsuarioFuncionario")
    }
    else if (User.Identity.IsAuthenticated && User.IsInRole("Cliente"))
    {
        @await Html.PartialAsync("_HeaderUsuarioCliente")
    }
    else
    {
        @await Html.PartialAsync("_HeaderUsuarioNaoLogado")

    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PIM_Fazenda_Urbana - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
